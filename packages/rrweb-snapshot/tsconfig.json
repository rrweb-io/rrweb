{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom", "ES2020", "ES2021.WeakRef"]
  },
  "exclude": ["test"],
  "include": ["src"],
  "references": []
}
