{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": ["test"],
  "include": ["src", "../rrweb/src/record/workers/workers.d.ts"]
}
