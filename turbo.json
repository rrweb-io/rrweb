{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "prepublish": {
      "dependsOn": ["^prepublish"],
      "outputs": ["lib/**", "es/**", "dist/**", "typings/**"]
    },
    "test": {},
    "test:watch": {
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^prepublish"],
      "persistent": true
    },
    "lint": {},
    "check-types": {}
  }
}
