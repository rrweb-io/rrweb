{
  "name": "@rrweb/_monorepo",
  "description": "record and replay the web",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/rrweb-io/rrweb.git"
  },
  "keywords": [
    "rrweb"
  ],
  "author": "yanzhen@smartx.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rrweb-io/rrweb/issues"
  },
  "private": true,
  "homepage": "https://github.com/rrweb-io/rrweb#readme",
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.8.2",
    "@types/prettier": "2.7.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "browserslist": "^4.22.1",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "esbuild-plugin-umd-wrapper": "^2.0.0",
    "eslint": "^8.53.0",
    "eslint-plugin-compat": "^5.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "happy-dom": "^14.12.0",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "prettier": "2.8.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build:all": "NODE_OPTIONS='--max-old-space-size=4096' bun turbo run prepublish",
    "references:update": "bun workspaces-to-typescript-project-references",
    "test": "bun turbo run test --concurrency=1 --continue",
    "test:watch": "bun turbo run test:watch",
    "test:update": "bun turbo run test:update",
    "check-types": "bun turbo run check-types --continue",
    "format": "bun prettier --write '**/*.{ts,md}'",
    "format:head": "git diff --name-only HEAD^ |grep '\\.ts$\\|\\.md$' |xargs bun prettier --write",
    "dev": "bun turbo run dev --concurrency=18",
    "repl": "cd packages/rrweb && bun run repl",
    "live-stream": "cd packages/rrweb && bun live-stream",
    "lint": "bun run concurrently --success=all -r -m=1 'bun run markdownlint docs' 'ESLINT_USE_FLAT_CONFIG=false bun eslint packages/*/src --ext .ts,.tsx,.js,.jsx,.svelte'",
    "lint:report": "ESLINT_USE_FLAT_CONFIG=false bun eslint --output-file eslint_report.json --format json packages/*/src --ext .ts,.tsx,.js,.jsx",
    "release": "bun run build:all && changeset publish"
  },
  "overrides": {
    "cssom": "npm:rrweb-cssom@0.7.1",
    "@types/dom-webcodecs": "0.1.5"
  },
  "browserslist": [
    "defaults",
    "not op_mini all"
  ],
  "packageManager": "bun@1.3.2"
}
